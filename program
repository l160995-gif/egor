            –ó–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—è...
        </div>
        
        <div class="date-info">
            <div>–°—å–æ–≥–æ–¥–Ω—ñ: <span class="current-date" id="currentDate">-</span></div>
            <div style="margin-top: 10px;">–ù–∞—Å—Ç—É–ø–Ω–∞ —Å—É–±–æ—Ç–∞: <span class="current-date" id="nextSaturday">-</span></div>
        </div>
    </div>

    <script>
        function getDaysWord(days) {
            if (days === 0) return '–¥–µ–Ω—å';
            if (days === 1) return '–¥–µ–Ω—å';
            if (days >= 2 && days <= 4) return '–¥–Ω—ñ';
            return '–¥–Ω—ñ–≤';
        }

        function getInfoText(days) {
            if (days === 0) {
                return 'üéâ –°—å–æ–≥–æ–¥–Ω—ñ —Å—É–±–æ—Ç–∞! –ß—É–¥–æ–≤–æ–≥–æ –¥–Ω—è!';
            } else if (days === 1) {
                return 'üåü –ó–∞–≤—Ç—Ä–∞ —Å—É–±–æ—Ç–∞! –ú–∞–π–∂–µ –¥–æ—á–µ–∫–∞–ª–∏—Å—å!';
            } else if (days === 2) {
                return '‚è∞ –ü—ñ—Å–ª—è–∑–∞–≤—Ç—Ä–∞ —Å—É–±–æ—Ç–∞! –©–µ —Ç—Ä–æ—à–∫–∏!';
            } else {
                return `‚åõ –î–æ –≤–∏—Ö—ñ–¥–Ω–∏—Ö –∑–∞–ª–∏—à–∏–ª–æ—Å—å —â–µ ${days} ${getDaysWord(days)}`;
            }
        }

        function formatDate(date) {
            const options = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            };
            return date.toLocaleDateString('uk-UA', options);
        }

        function calculateDaysToSaturday() {
            const today = new Date();
            const currentDay = today.getDay(); // 0 (–Ω–µ–¥—ñ–ª—è) - 6 (—Å—É–±–æ—Ç–∞)
            
            let daysUntilSaturday;
            
            if (currentDay === 6) {
                // –°—å–æ–≥–æ–¥–Ω—ñ —Å—É–±–æ—Ç–∞
                daysUntilSaturday = 0;
            } else if (currentDay === 0) {
                // –ù–µ–¥—ñ–ª—è - –¥–æ —Å—É–±–æ—Ç–∏ 6 –¥–Ω—ñ–≤
                daysUntilSaturday = 6;
            } else {
                // –Ü–Ω—à—ñ –¥–Ω—ñ —Ç–∏–∂–Ω—è
                daysUntilSaturday = 6 - currentDay;
            }
            
            // –û–±—á–∏—Å–ª—é—î–º–æ –¥–∞—Ç—É –Ω–∞—Å—Ç—É–ø–Ω–æ—ó —Å—É–±–æ—Ç–∏
            const nextSaturday = new Date(today);
            nextSaturday.setDate(today.getDate() + daysUntilSaturday);
            
            return {
                days: daysUntilSaturday,
                today: today,
                saturday: nextSaturday
            };
        }

        function updateCountdown() {
            const result = calculateDaysToSaturday();
            
            document.getElementById('daysCount').textContent = result.days;
            document.getElementById('daysLabel').textContent = getDaysWord(result.days);
            document.getElementById('infoText').textContent = getInfoText(result.days);
            document.getElementById('currentDate').textContent = formatDate(result.today);
            document.getElementById('nextSaturday').textContent = formatDate(result.saturday);
        }

        // –û–Ω–æ–≤–ª—é—î–º–æ –ø—Ä–∏ –∑–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—ñ —Å—Ç–æ—Ä—ñ–Ω–∫–∏
        updateCountdown();
        
        // –û–Ω–æ–≤–ª—é—î–º–æ –∫–æ–∂–Ω—É —Ö–≤–∏–ª–∏–Ω—É (–Ω–∞ –≤–∏–ø–∞–¥–æ–∫, —è–∫—â–æ —Å—Ç–æ—Ä—ñ–Ω–∫–∞ –∑–∞–ª–∏—à–∞—î—Ç—å—Å—è –≤—ñ–¥–∫—Ä–∏—Ç–æ—é –¥–æ –ø—ñ–≤–Ω–æ—á—ñ)
        setInterval(updateCountdown, 60000);
    </script>
